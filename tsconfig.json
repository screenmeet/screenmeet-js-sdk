{
  "include": [
    "src/"
  ],
  "compileOnSave": false,
  "compilerOptions": {
    "noEmit": false,
    "module": "commonjs",
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "downlevelIteration" : true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata" : true,
    "target": "es5",
    "lib": [
      "dom",
      "es6"
    ]
  },
  "typedocOptions": {
    "entryPoints": ["src/"],
    "out": "docs"
  }
}